<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".Timer_6">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="395dp"
        android:layout_height="395dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameImage"
        android:layout_marginTop="-50dp"
        />

    <TextView
        android:id="@+id/view_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nameImage"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="144dp"
        android:fontFamily="@font/inter_bold"
        android:text="00:00"
        android:textColor="#54AD17"
        android:textSize="55dp"/>

    <ImageView
        android:id="@+id/nameImage"
        android:layout_width="390dp"
        android:layout_height="123dp"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_Start_Stop"
        style="@style/Widget.Material3.Button"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="-10dp"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/inter_bold"
        android:text="Запуск"
        android:textColor="#D6D6D6"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_below="@+id/btn_Start_Stop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter_light"
        android:onClick="zavershit"
        android:text="@string/Завершить"
        android:textColor="#9CCD94"
        android:textSize="20sp" />

</RelativeLayout>